# Backend Environment Variables
# Copy this file to .env and fill in your own values
# NEVER commit .env to version control!

PORT=5001
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database
JWT_SECRET=generate-a-strong-random-secret-minimum-64-characters
JWT_EXPIRES_IN=24h
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key
SENDER_EMAIL=your-email@example.com

# Gemini AI Configuration (Get your key from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=models/gemini-2.5-flash

# Google Cloud TTS Configuration
GOOGLE_APPLICATION_CREDENTIALS=your-google-credentials.json

# GROQ API Key
GROQ_API_KEY=your-groq-api-key
